<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SeatReservation.ViewModels"
             x:Class="SeatReservation.Views.SeatSelectionPage"
             Title="Wybierz miejsce">

    <ContentPage.BindingContext>
        <viewmodels:SeatSelectionViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Label Text="{Binding MovieTitle}" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding GroupedSeats}" ItemsLayout="VerticalGrid, Span=8">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Label}"
                                BackgroundColor="{Binding IsReserved, Converter={StaticResource ReservedToColorConverter}}"
                                Command="{Binding BindingContext.SelectSeatCommand, Source={x:Reference Name=ThisPage}}"
                                CommandParameter="{Binding}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
