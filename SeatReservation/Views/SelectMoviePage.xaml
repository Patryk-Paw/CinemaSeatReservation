<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SeatReservation.ViewModels"
             x:Class="SeatReservation.Views.SelectMoviePage"
             Title="Wybierz film">

    <ContentPage.BindingContext>
        <viewmodels:MovieViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10">
        <ListView ItemsSource="{Binding Movies}" SelectedItem="{Binding SelectedMovie}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding MovieTitle}" Detail="{Binding ShowTime}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Dodaj film" Command="{Binding AddMovieCommand}" />
        <Button Text="Wybierz film" Command="{Binding SelectMovieCommand}" IsEnabled="{Binding SelectedMovie, Converter={StaticResource NullToBoolConverter}}" />
    </VerticalStackLayout>
</ContentPage>
